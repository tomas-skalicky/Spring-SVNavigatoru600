<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

	<class name="svnavigatoru.domain.News" table="NEWS" lazy="false">
		<id name="id" type="int">
			<generator class="native"/>
		</id>
		<property name="title" type="string" length="200" not-null="true"/>
		<property name="text" type="text" not-null="true"/>
		<property name="creationTime" column="CREATION_TIME" not-null="true"/>
		<property name="lastSaveTime" column="LAST_SAVE_TIME" not-null="true"/>
	</class>

</hibernate-mapping>
