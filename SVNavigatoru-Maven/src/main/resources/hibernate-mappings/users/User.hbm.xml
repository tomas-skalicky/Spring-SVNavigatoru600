<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

	<!-- Do not use the attribute 'catalog'. The catalog is a database which contains system tables, not yours. -->
	<class name="svnavigatoru.domain.users.User" table="USERS" lazy="false">
		<id name="username" type="string" length="50"/>
		<property name="password" type="string" length="50" not-null="true"/>
		<property name="enabled" type="boolean" not-null="true"/>
		<property name="firstName" column="FIRST_NAME" type="string" length="20" not-null="true"/>
		<property name="lastName" column="LAST_NAME" type="string" length="20" not-null="true"/>
		<property name="email" type="string" length="100" unique="true"/>
		<property name="phone" type="string" length="20"/>
		<set name="authorities" inverse="true" cascade="all" lazy="false">
			<key column="USERNAME"/>
			<one-to-many class="svnavigatoru.domain.users.Authority"/>
		</set>
	</class>

</hibernate-mapping>
