<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

	<class name="svnavigatoru.domain.eventcalendar.CalendarEvent" table="CALENDAR_EVENTS" lazy="false">
		<id name="id" type="int">
			<generator class="native"/>
		</id>
		<property name="name" type="string" length="100" not-null="true"/>
		<property name="date" not-null="true"/>
		<property name="description" type="text"/>
		<property name="priority" type="string" length="10" not-null="true"/>
	</class>

</hibernate-mapping>
