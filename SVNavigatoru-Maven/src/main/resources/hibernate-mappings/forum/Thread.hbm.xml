<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

	<class name="com.svnavigatoru600.domain.forum.Thread" table="THREADS" lazy="false">
		<id name="id" type="int">
			<generator class="native"/>
		</id>
		<property name="name" type="string" length="255" not-null="true"/>
		<property name="creationTime" column="CREATION_TIME" not-null="true"/>

		<bag name="contributions" inverse="true" cascade="all" lazy="false">
			<key column="THREAD_ID"/>
			<one-to-many class="com.svnavigatoru600.domain.forum.Contribution"/>
		</bag>

		<!-- Thread can exist even without its author. This is in case the author's user is deleted from the repository. -->
		<many-to-one name="author" class="com.svnavigatoru600.domain.users.User" column="AUTHOR_USERNAME" cascade="none"/>
	</class>

</hibernate-mapping>
